<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<style>
body, html {
  height: 100%;
  margin: 0;
}

div {
  padding: 5px;
}

input {
  width: 50%;
}

.bg {
  /* Full height */
  height: 50%; 

  /* Center and scale the image */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.search {
  padding-top: 0px;
  padding-bottom: 30px;
  margin-left: 30%;
  margin-right: 15%;
  width: auto;
}
</style>

<div>
<div class="col-lg-12 text-center text-primary">
  <!-- Button to create an Expert Profile -->
  <a href="/create-profile" class="btn btn-primary" role="button">Create an Expert Profile</a>

  <!-- Button to display all Expert Profiles rather than searching -->
  <a href="/profile/all" class="btn btn-primary" role="button">View All Expert Profiles</a>
</div>

<!-- User welcomed -->
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center text-primary">
      <h1 class="mt-5">Welcome to Expert Finder!</h1>
      <p class="lead">Search by particular skill, course or organization to find the Experts you are looking for, or create an Expert Profile for others to find.</p>
    </div>
  </div>
</div>

<div class="search">
    <!-- Search bar and button to query Expert Profiles -->
    <form action="/search" method="POST">
      <input type="text" id="term" name="term" placeholder="Skill/Course/Organization">
      <button type="submit" class="btn btn-success">Find an Expert</button>
    </form>
  </div>
</div>

