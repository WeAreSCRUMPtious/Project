<script>
  function gridView() {
    document.getElementById("divgrid").style.display = "";
    document.getElementById("divlist").style.display = "none";
  }

  function listView() {
    document.getElementById("divgrid").style.display = "none";
    document.getElementById("divlist").style.display = "";
  }
</script>

<h5>Results for "{{term}}":</h5>

<div class="container">
  <div class="mb-3">
    <a class="btn btn-primary" onclick="gridView()">Grid View</a>
    <a class="btn btn-primary" onclick="listView()">List View</a>
  </div>

    <div id="divgrid" class="row gutters-sm">
      {{#each searchRes}}
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://i.imgur.com/J29Z08u.png" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4>{{first_name}} {{last_name}}</h4>
                  <a class="btn btn-primary" href="/profile/{{profile_id}}">View Profile</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div id="divlist" style="display:none">
      {{#each searchRes}}
        <div class="card mb-3 w-50">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="https://i.imgur.com/J29Z08u.png" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h4 class="card-title">{{first_name}} {{last_name}}</h4>
              </div>
              <div class="card-body">
                <a class="btn btn-primary" href="/profile/{{profile_id}}">View Profile</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  
</div>