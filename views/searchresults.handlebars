<script>
  function gridView() {
    document.getElementById("divgrid").style.display = "";
    document.getElementById("divlist").style.display = "none";
  }

  function listView() {
    document.getElementById("divgrid").style.display = "none";
    document.getElementById("divlist").style.display = "";
  }
</script>

<div class="container p-3">
  <div class="row">
    <div class="col-6">
      <h3>Results for "{{term}}"</h3>
    </div>
    <div class="col">
      <button id="gridbutton" class="btn btn-outline-dark" onclick="gridView()">Grid View</button>
      <button id="listbutton" class="btn btn-outline-dark" onclick="listView()">List View</button>
    </div>
  </div>
</div>
<div class="container">
  <div id="divgrid" class="row gutters-sm">
    {{#each searchRes}}
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img src="https://i.imgur.com/J29Z08u.png" class="rounded-circle" width="150">
              <div class="mt-3">
                <h4>{{first_name}} {{last_name}}</h4>
                <a class="btn btn-primary" href="/profile/{{profile_id}}">View Profile</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div id="divlist" style="display:none">
    {{#each searchRes}}
      <div class="card mb-3 w-50">
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="https://i.imgur.com/J29Z08u.png" class="card-img" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h4 class="card-title">{{first_name}} {{last_name}}</h4>
            </div>
            <div class="card-body">
              <a class="btn btn-primary" href="/profile/{{profile_id}}">View Profile</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>